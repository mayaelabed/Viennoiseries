						<a href="{{ path("app_cart") }}" class="btn ml-lg-3  d-none d-lg-inline-block"><i class="fas fa-shopping-basket icon-light"></i><sup><span class="ml-1 badge badge-brown badge-pill label-count">0</span></sup></a>
						 <a
                                 class="btn btn-outline-dark ml-lg-4 btn-login"
                                 href="/{{ app.user ? 'logout' : 'login' }}"
                                 @click="isOpen = false">
                            {{ app.user ? 'Logout' : 'Login' }}
                        </a>
                </span>
            </div>
        </div>
    </nav>
</header>

<main>
    <section id="space-banner"></section>

    <section id="product-list">
        <div class="container py-5">
            <h2 class="section-title">Our Products</h2>

            <div class="row">
                <div class="col-lg-3 order-2 order-lg-1">
                    <h5 class="font-weight-bold text-center pt-3" style="letter-spacing: 2px">Product Categories</h5>
                    <ul class="list-group px-3">
                        <a href="#all" class="active">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">All<span>(11)</span>
                            </li>
                        </a>
                        <a href="#bread">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">Bread<span>(5)</span></li>
                        </a>
                        <a href="#cakes">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">Cakes<span>(2)</span></li>
                        </a>
                        <a href="#muffin">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">Muffin<span>(3)</span></li>
                        </a>
                        <a href="#others">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">Others<span>(1)</span></li>
                        </a>
                    </ul>

                    <hr class="my-4">

                    <h5 class="font-weight-bold text-center" style="letter-spacing: 2px">Filter By Price</h5>
                    <div class="px-3">
                        <p>
                            <input type="text" id="amount" readonly style="border:0; color:#ffcc5c; font-weight:bold; width: 100%; text-align: center;">
                        </p>
                        <div id="slider-range"></div>
                        <button class="btn btn-outline-dark btn-block my-4">SEARCH</button>
                    </div>

                    <hr class="my-4">


                </div>
                <div class="col-lg-9 order-1 order-lg-2">
                    <div class="row">
                        {% for product in products %}
                      <section class="col-6 col-md-4 item mb-5">


                             <div class="img-wrap mb-4">

                                    <img class="img-fluid" src="{{ asset('images/') ~ product.image }}" alt="Image de {{ product.title }}">
                                    <hr>
                                </div>
                                <h5 class="text-center font-weight-bold">{{ product.title }}</h5>
                                <p class="text-center">{{ product.price }} TND</p>
                                <p class="text-center review">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </p>
                                <a href="{{path("add", {id: product.id})}} " class="btn btn-success">
                                    <i class="bi bi-cart-plus">Add To Cart</i>
                                </a>
                      </section>
                            <br>
                            <br>
                            <br>
                        {% endfor %}
                </div>
            </div>

            </div>

