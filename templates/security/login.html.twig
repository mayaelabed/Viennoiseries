


<html>
<head>
    <!-- bootstrap -->
    <link rel="stylesheet" type="text/css" href=" {{ asset ("asset/css/bootstrap.min.css") }}">

    <!-- fontawesome -->
    <link rel="stylesheet" type="text/css" href=" {{ asset ("asset/vendor/fontawesome/css/all.min.css") }}">

    <!-- owlcarousel -->
    <link rel="stylesheet" type="text/css" href=" {{ asset("asset/vendor/owlcarousel/owl.carousel.min.css") }}">
    <link rel="stylesheet" type="text/css" href="{{ asset("asset/vendor/owlcarousel/owl.theme.default.min.css") }}">

    <!-- aos -->
    <link rel="stylesheet" type="text/css" href="{{ asset("asset/vendor/aos/aos.css") }}">

    <!-- logo -->
    <link rel="icon" href="{{ asset("asset/images/logo.png") }}" type="image/png" sizes="16x16">

    <!-- custom css -->
    <link rel="stylesheet" type="text/css" href="{{ asset("asset/css/style.css") }}">
</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg fixed-top menu">
        <div class="container px-md-0">
            <a class="navbar-brand" href="{{ path("app_projet") }}"><span>Le</span> Jardin Sucr√© </a>



        </div>
        <span class="navbar-text">
						<input type="text" name="search" id="searchbox" placeholder="Enter Keyword..." autofocus class="shadow p-2" style="display: none;">
						<button class="btn btn-search"><i class="fas fa-search icon-light"></i></button>
						<a href="{{ path("app_cart") }}" class="btn ml-lg-3  d-none d-lg-inline-block"><i class="fas fa-shopping-basket icon-light"></i><sup><span class="ml-1 badge badge-brown badge-pill label-count">0</span></sup></a>


                        <a
                                class="btn btn-outline-dark ml-lg-4 btn-login"
                                href="/{{ app.user ? 'logout' : 'login' }}"
                                @click="isOpen = false">
                            {{ app.user ? 'Logout' : 'Login' }}
                        </a>


                </span>
    </nav>
</header>
<div  id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body px-4">
                <ul class="nav nav-pills mb-3 nav-justified" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link font-weight-bold active" id="pills-login-tab" data-toggle="pill" href="{{ path("app_login" )}}"role="tab" aria-controls="pills-login" aria-selected="true">Log In</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link font-weight-bold" id="pills-register-tab" data-toggle="pill" href="{{ path("app_register") }}" role="tab" aria-controls="pills-register" aria-selected="false">Register</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="pills-login-tab">

                        {% block body %}
                        <form id="custom-form" method="post">



                            <div class="group">
                                <input type="email"
                                       value="{{ last_username }}"
                                       name="email"
                                       name="email"
                                       id="inputEmail"
                                       class="bg-transparent block mt-10 mx-auto border-b-2 w-1/5 h-20 text-2xl outline-none"
                                       placeholder="Email"
                                       autocomplete="email"
                                       required
                                       autofocus>
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Email Address</label>
                            </div>

                            <div class="group">
                                <input
                                        type="password"
                                        name="password"
                                        id="inputPassword"
                                        class="bg-transparent block mt-10 mx-auto border-b-2 w-1/5 h-20 text-2xl outline-none"
                                        autocomplete="current-password"
                                        placeholder="Password"
                                        required
                                >

                                <input
                                        type="hidden"
                                        name="_csrf_token"
                                        value="{{ csrf_token('authenticate') }}"
                                >
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Password</label>
                            </div>

                            <p class="text-right mb-4"><a href="#" class="text-muted">Forget Password?</a></p>

                            <button class="btn btn-block btn-dark py-2 mb-4" type="submit">Login</button>
                            <p class="text-center text-secondary"><small>Or Login With</small></p>

                            <div class="row mb-4">
                                <div class="col-6"><button type="button" class="btn shadow btn-block btn-facebook"><i class="fab fa-facebook-f pr-2"></i> Facebook</button></div>

                                <div class="col-6"><button type="button" class="btn shadow btn-block btn-google"><i class="fab fa-google pr-2"></i> Google</button></div>
                            </div>
                        </form>
                    </div>
                </div>

{% endblock %}